<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.demo.bean.student" table="Stud21july">
        <id name="rollno" > <!--  Primary Key  --><!-- coming from bean -->
         <column name="rollno"/> <!--  going to table -->
          
        </id>
        <property name="sname" type="java.lang.String">
            <column name="NAME" length="15"/>
        </property>
        
        <property name="percentage" type="java.lang.Double">
            <column name="percentage" />
            </property>  
            <property name="DOB" type="java.lang.String">
            <column name="DOB" length="20"/>
        </property>
        
       
    </class>
</hibernate-mapping>
